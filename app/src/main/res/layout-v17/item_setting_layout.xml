<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/BLACK" android:layout_width="match_parent" android:layout_height="72dp" android:paddingStart="16dp" android:paddingEnd="16dp">
    <ImageView android:id="@+id/iv_set_icon" android:padding="14dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_centerVertical="true" android:contentDescription="@string/app_name" android:layout_alignParentStart="true"/>
    <TextView android:textSize="24sp" android:textColor="@color/WHITE" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_set_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="标题" android:maxLines="1" android:layout_toEndOf="@+id/iv_set_icon"/>
    <ImageView android:id="@+id/iv_set_to_right" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/WHITE" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_set_unit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="单位" android:maxLines="1" android:layout_toStartOf="@+id/iv_set_to_right"/>
    <TextView android:textSize="24sp" android:textColor="@color/WHITE" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_set_content" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="内容" android:maxLines="1" android:layout_toStartOf="@+id/tv_set_unit"/>
    <CheckBox android:id="@+id/cb" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@drawable/cb_check_selecter" android:layout_centerVertical="true" android:layout_toStartOf="@+id/tv_set_unit"/>
    <View android:id="@+id/v_set_divider" android:background="#999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
