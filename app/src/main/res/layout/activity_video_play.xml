<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/BLACK" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/activity_video_play" android:layout_width="match_parent" android:layout_height="match_parent">
        <SurfaceView android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <android.opengl.GLSurfaceView android:id="@+id/glsurfaceview" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/bg_frame" android:background="@color/BLACK" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/control_bar" android:padding="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16px" android:layout_centerVertical="true">
                <ImageView android:id="@+id/rew" android:layout_width="64dp" android:layout_height="64dp" style="@style/MediaButton.Rew"/>
                <ImageView android:id="@+id/iv_play" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="@mipmap/preview_stop_nomal" android:scaleType="centerInside"/>
                <ImageView android:id="@+id/ffwd" android:layout_width="64dp" android:layout_height="64dp" style="@style/MediaButton.Ffwd"/>
                <SeekBar android:layout_gravity="center_vertical" android:id="@+id/seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_weight="1"/>
                <TextView android:textColor="@color/WHITE" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/video_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:text="00:00/00:00" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="22sp" android:textColor="#f4f708" android:id="@+id/play_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="7dp" android:layout_above="@+id/control_bar" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/lock" android:background="@mipmap/lock_normal" android:layout_width="72dp" android:layout_height="72dp" android:layout_marginRight="28dp" android:layout_above="@+id/play_speed" android:layout_alignParentRight="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/back" android:background="@drawable/back_selector" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
