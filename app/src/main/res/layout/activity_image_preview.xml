<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rootview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <android.support.v4.view.ViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="horizontal" android:background="#33000000" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize">
            <ImageView android:layout_gravity="right" android:id="@+id/back" android:background="@mipmap/icon_file_list_back" android:layout_width="@dimen/head_icon_size" android:layout_height="@dimen/head_icon_size" android:layout_marginLeft="8dp" android:layout_marginRight="56dp"/>
            <TextView android:textSize="22sp" android:textColor="@color/WHITE" android:gravity="center" android:id="@+id/title" android:layout_width="0dp" android:layout_height="match_parent" android:singleLine="true" android:layout_weight="1"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/delete" android:background="@mipmap/delete" android:visibility="gone" android:layout_width="@dimen/head_icon_size" android:layout_height="@dimen/head_icon_size"/>
            <ImageView android:layout_gravity="center_vertical" android:background="@mipmap/connect_phone" android:visibility="gone" android:layout_width="@dimen/head_icon_size" android:layout_height="@dimen/head_icon_size" android:layout_marginLeft="24px" android:layout_marginRight="16px"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_left" android:background="@mipmap/icon_left" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_right" android:background="@mipmap/icon_right" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
